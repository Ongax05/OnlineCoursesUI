@inherits LayoutComponentBase

@using Interfaces
@using Services
@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider authenticationProvider
@inject NavigationManager NavManager

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row d-flex mt-3 justify-content-center align-items-center text-center">
            <h1>Online Courses UI</h1>
            <a @onclick="Logout" href="javascript:void(0)">Salir</a>
        </div>


        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task Logout ()
    {
        var AuthService = (AuthenticationService)authenticationProvider;
        await AuthService.UpdateAuthenticationState(null);
        NavManager.NavigateTo("/",true);
    }
}